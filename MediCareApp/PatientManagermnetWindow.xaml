<Window x:Class="MediCareApp.PatientManagermnetWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Management" Height="500" Width="900"  WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Patient Management" FontSize="36" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20" Grid.Row="0"/>

        <!-- Form nhập liệu -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Patient Id" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="txtPatientId" Grid.Row="0" Grid.Column="1" Margin="0,5" IsReadOnly="True"/>

            <Label Content="Patient Code" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
            <TextBox Name="txtPatientCode" Grid.Row="0" Grid.Column="3" Margin="0,5"/>

            <Label Content="Full Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="txtFullName" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

            <Label Content="Age" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
            <TextBox Name="txtAge" Grid.Row="1" Grid.Column="3" Margin="0,5"/>

            <Label Content="Phone" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Name="txtPhone" Grid.Row="2" Grid.Column="1" Margin="0,5"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Name="dgPatients" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionMode="Single" SelectionChanged="dgPatients_SelectionChanged" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient Code" Binding="{Binding PatientCode}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Refresh" Width="100" Margin="10" Click="Refresh_Click"/>
            <Button Content="Create" Width="100" Margin="10" Click="Create_Click"/>
            <Button Content="Update" Width="100" Margin="10" Click="Update_Click"/>
            <Button Content="Delete" Width="100" Margin="10" Click="Delete_Click"/>
            <Button Content="Close" Width="100" Margin="10" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window> 