<Window x:Class="MediCareApp.MyAppoinmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediCareApp"
        mc:Ignorable="d"
        Title="My Appointments" Height="520" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="My Appointments" FontSize="28" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,8"/>

        <DataGrid x:Name="dgAppointments" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Patient" Binding="{Binding Patient.FullName}" Width="2*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Patient.Age}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat=yyyy-MM-dd HH:mm}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="Refresh" Width="110" Margin="8" Click="Refresh_Click"/>
            <Button Content="Complete" Width="110" Margin="8" Click="Complete_Click"/>
            <Button Content="Cancel" Width="110" Margin="8" Click="Cancel_Click"/>
            <Separator Width="16"/>
            <TextBox x:Name="txtNewTitle" Width="180" Margin="8" ToolTip="Title"/>
            <DatePicker x:Name="dpDate" Width="160" Margin="8"/>
            <TextBox x:Name="txtPatientCode" Width="140" Margin="8" ToolTip="Patient Code"/>
            <Button Content="Create" Width="110" Margin="8" Click="Create_Click"/>
            <Button Content="Close" Width="110" Margin="8" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
